<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Nazwa: "
            android:textStyle="bold"/>
        <TextView
            android:background="#76A5D3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVNazwaZywnosc"
            android:text="title"
            android:padding="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ilosc: "
            android:textStyle="bold"/>
        <TextView
            android:background="#76A5D3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVIloscZywnosc"
            android:text="title"
            android:padding="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategoria: "
            android:textStyle="bold"/>
        <TextView
            android:background="#76A5D3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVKategoriaZywnosc"
            android:text="title"
            android:padding="10dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usun"
            android:id="@+id/btnUsunSkladnikZSpizarni"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edytuj ilosc"
            android:id="@+id/btnEdytujSkladnikZSpizarni"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF0000FF"/>
</LinearLayout>