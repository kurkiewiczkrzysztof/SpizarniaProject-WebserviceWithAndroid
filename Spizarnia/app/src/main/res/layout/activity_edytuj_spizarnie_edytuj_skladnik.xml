<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edytuj_spizarnie_edytuj_skladnik"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kurkiewiczfuturetechnology.spizarnia.edytujSpizarnieEdytujSkladnik">
    <TextView
        android:text="Edycja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etIloscEdytuj"
        android:hint="Podaj nowa ilosc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDFF"
        android:singleLine="true"/>
    <Button
        android:id="@+id/btnZmien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZmieÅ„"
        android:onClick="btnZmienClick"/>
    <Button
        android:id="@+id/btnAnuluj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnAnulujClick"
        android:text="Anuluj"/>
    />
</LinearLayout>
